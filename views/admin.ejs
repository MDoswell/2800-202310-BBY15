<%- include("templates/header") %>
<style>
    h5 {
        color: white;
    }

    ul {
        color: white;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex-grow: 1;
        position: relative;
    }

    .pagination-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #1B2021;
        padding: 10px;
    }
</style>
<main class="py-5 px-4">
    <br>
    <h5>Users:</h5>
    <ul>
        <% let i=0; %>
        <% for(i=0; i < users.length; i++) { %>
            <%- include('templates/user', {user: users[i]}) %> 
            <br>
        <% } %>
    </ul>
</main>
<div class="pagination-container">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
                <li class="page-item"><a class="page-link" href="/admin?page=1">First</a></li>
                <li class="page-item"><a class="page-link" href="/admin?page=<%= currentPage - 1 %>">Previous</a></li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                    <li class="page-item active"><span class="page-link"><%= i %></span></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/admin?page=<%= i %>"><%= i %></a></li>
                <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <li class="page-item"><a class="page-link" href="/admin?page=<%= currentPage + 1 %>">Next</a></li>
                <li class="page-item"><a class="page-link" href="/admin?page=<%= totalPages %>">Last</a></li>
            <% } %>
        </ul>
    </nav>
</div>
<%- include("templates/footer") %>
