<%- include("templates/header")%>
  <style>
    hr {
      border-color: white;
    }
  </style>
  <div id="loaderAnimation"><img id="loaderimg" src="./img/loading.gif" alt="loader animation"></div>
  <div id="fullPage">
    <div class="mt-5 mx-auto">
      <h2 class="fw-bold text-center my-3">Thanks for choosing mytrAIner!</h2>
      <h4 class="fw-bold text-center my-3">To get started simply fill out the form below with your information!</h4>
    </div>
    <div id="setupFormContainer" class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <form id="setupForm" class="setup-form">
            <div class="form-group">
              <div class="grid">
                <div class="col text-left">
                  <span class='setupTitles'><label for="age">*Age:</label></span>
                  <input type="number" name="age" id="age" min="16" max="99" class="form-control" placeholder="Age" aria-label="Age" required>
                </div>

                <div class="col text-left mt-2">
                  <fieldset id="gender"><div>
                    <span class='setupTitles'><label for="gender">*Gender:</label></span>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="male" name="gender" value="male">
                    <label class="form-check-label" for="male">Male</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="female" name="gender" value="female">
                    <label class="form-check-label" for="female">Female</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" id="undisclosed" name="gender" value="undisclosed" checked>
                    <label class="form-check-label" for="undisclosed">Rather not say</label>
                  </div></fieldset>
                  
                </div>
              </div>
            </div>


            <div class="grid my-3">
              <div class="col text-left">
                <span class='setupTitles'><label class="form-label">*Weight (lbs):</label></span>
                <input name="weight" id="weight" min="0" type="number" class="form-control" placeholder="Weight" required>
              </div>
              <div class="col text-left mt-2">
                <span class='setupTitles'><label class="form-label">*Height:</label></span>
                <div class="row">
                  <div class="col">
                    <input name="feet" id="feet" min="0" type="number" class="form-control" placeholder="Feet" required>
                  </div>
                  <div class="col">
                    <input name="inches" id="inches" min="0" type="number" class="form-control" placeholder="Inches" required>
                  </div>
                </div>
              </div>
            </div>

            <div class="my-3 mx-3">
              <span class='setupTitles'><label for="exampleFormControlTextarea1" class="form-label">*Please state your goals for using this
                app</label></span>
              <textarea name="goals" id="goals" class="form-control" placeholder="Enter your goals!" id="exampleFormControlTextarea1"
                rows="3" required></textarea >
            </div>

            <div class="py-3">
              <p class="fw-bold">On a scale of 1 through 10 with 10 being very experienced and 1 being no experience,
                how experienced are you in exercise?</p>

              <input name="experience" type="range" value="1" min="1" max="10"
                oninput="this.nextElementSibling.value = this.value" style="width: 90%;">
              <output id="experience" style="color:whitesmoke">1</output>
            </div>
            <!-- <div class="py-3"><label for="equipment" class="form-label">What kind of equipment is available to you? (include gym equipment if applicable)</label>
              <select id="equipment" class="form-select" aria-label="Default select example">
                <option selected>Equipment</option>
                <option value="Only bodyweight">One</option>
                <option value="dumbell">Two</option>
                <option value="3">Three</option>
              </select>
            </div> -->
            <hr>

            <div>
              <h4 class="fw-bold text-center mt-3"></h4>

              <span class='setupTitles'><p class="fw-bold">Choose one or more Exercise types that you enjoy</p></span>
              <div class="form-check py-3">
                <input name="cardio" class="form-check-input" type="checkbox" value="" id="cardio" />
                <label class="form-check-label" for="cardio">
                  <span class="exerciseTypes">Cardiovascular exercises</span><span class="exerciseTypeDesc">These are exercises that increase your heart rate and breathing rate,
                  such as running, cycling, swimming, and jumping jacks.</span>
                </label>
              </div>

              <!-- Checked checkbox -->
              <div class="form-check py-3">
                <input name="strength" class="form-check-input" type="checkbox" value="" id="strength" />
                <label class="form-check-label" for="strength">
                  <span class="exerciseTypes">Strength training exercises</span><span class="exerciseTypeDesc">These are exercises that involve resistance to build and
                  strengthen muscles, such as weightlifting, push-ups, pull-ups, and squats.</span>
                </label>
              </div>

              <!-- Checked checkbox -->
              <div class="form-check py-3">
                <input name="flexibility" class="form-check-input" type="checkbox" value="" id="flexibility" />
                <label class="form-check-label" for="flexibility">
                  <span class="exerciseTypes">Flexibility exercises</span><span class="exerciseTypeDesc">These are exercises that improve your range of motion and flexibility,
                  such as yoga, Pilates, and stretching.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="balance" class="form-check-input" type="checkbox" value="" id="balance" />
                <label class="form-check-label" for="balance">
                  <span class="exerciseTypes">Balance exercises</span><span class="exerciseTypeDesc">These are exercises that improve your stability and balance, such as
                  standing on one leg, yoga poses, and balancing on a stability ball.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="high" class="form-check-input" type="checkbox" value="" id="high-intensity" />
                <label class="form-check-label" for="high-intensity">
                  <span class="exerciseTypes">High-Intensity Interval Training (HIIT)</span><span class="exerciseTypeDesc">These are exercises that alternate periods of
                  high-intensity exercise with periods of rest or low-intensity exercise, such as sprinting, burpees,
                  and jumping jacks.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="low" class="form-check-input" type="checkbox" value="" id="low-impact" />
                <label class="form-check-label" for="low-impact">
                  <span class="exerciseTypes">Low-impact exercises</span><span class="exerciseTypeDesc">These are exercises that are easy on your joints, such as walking,
                  cycling, and swimming.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="sport" class="form-check-input" type="checkbox" value="" id="sport" />
                <label class="form-check-label" for="sport">
                  <span class="exerciseTypes">Sports-specific exercises</span><span class="exerciseTypeDesc">These are exercises that are designed to improve your performance in
                  a specific sport, such as basketball, football, or tennis.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="functional" class="form-check-input" type="checkbox" value="" id="functional" />
                <label class="form-check-label" for="functional">
                  <span class="exerciseTypes">Functional training exercises</span><span class="exerciseTypeDesc">These are exercises that simulate movements you use in everyday
                  life, such as lifting groceries or bending down to pick up a child, and can improve your overall
                  strength and flexibility.</span>
                </label>
              </div>

              <div class="form-check py-3">
                <input name="bodyweight" class="form-check-input" type="checkbox" value="" id="bodyweight" />
                <label class="form-check-label" for="bodyweight">
                  <span class="exerciseTypes">Bodyweight exercises</span><span class="exerciseTypeDesc">These are exercises that use your own body weight as resistance, such as
                  push-ups, pull-ups, squats, and lunges.</span>
                </label>
              </div>

              <div class="form-check">
                <input name="endurance" class="form-check-input" type="checkbox" value="" id="endurance" />
                <label class="form-check-label" for="endurance">
                  <span class="exerciseTypes">Endurance exercises</span><span class="exerciseTypeDesc">These are exercises that improve your ability to sustain physical activity
                  over a long period of time, such as long-distance running, cycling, or swimming.</span>
                </label>
              </div>
            </div>
            <hr>
            <div class="card-footer text-center">
              <div class="row justify-content-center mt-2">
                <div class="col-md-auto">
                  <button id="submitButton" type="submit" class="btn btn-success">Submit</button>
                  <button id="resetButton" type="Reset" class="btn btn-danger">Reset</button>
                </div>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script>
    const submitButton = document.getElementById('submitButton');
    const loaderAnimation = document.getElementById('loaderAnimation');
    const fullPage = document.getElementById('fullPage');
    let age = document.getElementById('age');
    let weight = document.getElementById('weight');
    let heightFeet = document.getElementById('feet');
    let heightInches = document.getElementById('inches');
    let goals = document.getElementById('goals');
    loaderAnimation.style.display = 'none';
    fullPage.style.display = 'block';

    // If the submit button is clicked, display the loader animation.
    submitButton.addEventListener('click', function () {
      
      if (age.value < 16 ||
          age.value > 99 ||
          weight.value == "" ||
          weight.value < 0 ||
          heightFeet.value == "" ||
          heightFeet.value < 0 ||
          heightInches.value == "" ||
          heightInches.value < 0 ||
          goals.value == ""){
        return;
      }
      // Actions to perform when the button is clicked
      console.log('Submit button clicked');

      loaderAnimation.style.display = 'block';
      fullPage.style.display = 'none';
    });
  </script>
  <script src="js/generatePrompt.js"></script>
  <%- include("templates/footer")%>